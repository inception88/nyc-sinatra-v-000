<h2>Edit Historical Landmark</h2>

<h1><%=@figure.name%></h1>
<form method="POST" action="/landmarks/<%=@landmarks.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Name: <input type="text" name="figure[name]" id="figure_name"></h2>
  <h2>Landmarks</h2>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%="landmark_#{landmark.id}"%>"><%="#{landmark.name}"%></input>
    <br>
  <%end%>
  <br>
  <h2>Edit Landmark:</h2>
  <label>Name<input type="text" name="landmark[name]" id="new_landmark"></label>
  <label>Year<input type="text" name="landmark[year]"></label>
  <input type="submit" value="Edit Landmark">
</form>
<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
